<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background_borders"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/MarketName"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/TickerNameColor" />

    <TextView
        android:id="@+id/PairName"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/MarketName"
        android:layout_toEndOf="@+id/MarketName"
        android:textColor="@color/TickerNameColor" />

    <TextView
        android:id="@+id/VolumeLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/MarketName"
        android:text="Volume (24hr): "
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/VolumeNum"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/VolumeLbl"
        android:layout_toEndOf="@+id/VolumeLbl"
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/PriceLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/VolumeLbl"
        android:text="Price: "
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/PriceNum"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PriceLbl"
        android:layout_alignBottom="@+id/PriceLbl"
        android:layout_toEndOf="@+id/PriceLbl"
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/VolPerLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/PriceNum"
        android:layout_toEndOf="@+id/PriceNum"
        android:text="Volume (%): "
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/VolPer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/VolPerLbl"
        android:layout_toEndOf="@+id/VolPerLbl"
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/UpdatedLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/PairName"
        android:text="Updated: "
        android:textColor="@color/colorText" />

    <TextView
        android:id="@+id/Updated"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/UpdatedLbl"
        android:textColor="@color/colorText" />
</RelativeLayout>
