<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Transparent"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/appwidget_text"
        android:text="Bitcoin"
        android:textColor="@color/TickerNameColor"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/WidgetPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appwidget_text"
        android:text="TextView"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/WidgetChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/WidgetPrice"
        android:text="TextView"
        android:textSize="12sp" />

    <Button
        android:id="@+id/widgetRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/WidgetChange"
        android:layout_toEndOf="@+id/WidgetPrice"
        android:text="Button" />

</RelativeLayout>